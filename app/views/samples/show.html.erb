<% content_for :title, 'Sample ' + @sample.submitter_id %>
<div class="container">
    
    <div class="Block">
        <div class="row">
            <% @attrs.each do |attr| %>
                <% if attr != 'id' && attr != 'created_at' && attr != 'updated_at' && @sample[attr]%>
                <div class="col-md-6">
                    <strong><%=attr%>: </strong>
                    <% if attr == 'project_name' %>
                        <%= link_to @sample[attr], @project %>
                    <% else %>
                        <%= @sample[attr] %>
                    <% end %>
                </div>
                <% end %>
            <% end %>
        </div>        
    </div>
    
    <%#= form_tag upload_seq_project_sample_path, :multipart =>true do %>   
        <%#= file_field_tag :seq_file %>
        <%#= submit_tag "upload fasta file" %>
    <%# end %> 

    <%#= form_tag upload_inf_project_sample_path, :multipart =>true do %>
        <%#= file_field_tag :inf_file %>
        <%#= submit_tag "upload infiltration file" %>
    <%# end %> 

    

    

    
    <%if @inf_exist %>
        <p>
            <%#= link_to 'Download sequencing data', download_seq_project_sample_path %>
            <%= link_to 'Download infiltration data', download_inf_project_sample_path %><br/>
            <%#= link_to 'Edit', edit_project_sample_path(@sample.project, @sample.id) %> 
            <%#= link_to 'Delete', [@sample.project, @sample],
            method: :delete,
            data: { confirm: 'Are you sure to delete ' + @sample.submitter_id + '?'} %>
        </p>
        <div id="viz_sample_inf" class="col">
        </div>
        <%= javascript_pack_tag "static_inf" %>
    <% else %>
        <p> *infiltration data does NOT exist for this sample. </p>
    <%end%>
    
</div>
    
